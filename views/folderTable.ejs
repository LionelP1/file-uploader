<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Type</th>
      <th>Created</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <% filesAndFolders.forEach(item => { %>
      <tr onclick=" window.location.href='<%= item.type === 'Folder' ? `/homepage/${item.id}` : `/file/${item.id}` %>'">
        <td>
          <% if (item.type === 'Folder') { %>
            <img src="/images/folder-icon.png" alt="Folder" style="width: 20px; height: 20px; margin-right: 10px;" />
          <% } else if (item.type === 'File') { %>
            <img src="/images/file-icon.png" alt="File" style="width: 20px; height: 20px; margin-right: 10px;" />
          <% } %>
          <%= item.name %>
        </td>
        
        <td><%= item.name %></td>
        <td><%= item.size ? `${item.size}` : 'â€”' %></td>
        <td><%= item.type %></td>
        <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
        <td><%= new Date(item.updatedAt).toLocaleDateString() %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
