<div class="table-wrapper">
  <table class="table">
    <thead class="table-header">
      <tr class="table-row">
        <th class="table-cell">Name</th>
        <th class="table-cell">Size</th>
        <th class="table-cell">Type</th>
        <th class="table-cell">Created</th>
        <th class="table-cell">Actions</th>
      </tr>
    </thead>
    <tbody class="table-body">
      <% filesAndFolders.forEach(item => { %>
        <tr class="table-row clickable-row" onclick="window.location.href='<%= item.type === 'Folder' ? `/homepage/${item.id}` : `/file-info/${item.id}` %>'">
          <td class="table-cell">
            <% if (item.type === 'Folder') { %>
              <img src="/assests/folder.png" alt="Folder" class="icon" />
            <% } else if (item.type === 'File') { %>
              <img src="/assests/file.png"alt="file" class="icon" />
            <% } %>
            <%= item.name %>
          </td>
          <td class="table-cell"><%= item.size ? `${item.size}` : 'â€”' %></td>
          <td class="table-cell"><%= item.type %></td>
          <td class="table-cell"><%= new Date(item.createdAt).toLocaleDateString() %></td>
          <td class="table-cell">
            <form action="/delete-<%= item.type.toLowerCase() %>/<%= item.id %>?_method=DELETE" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>